{
  "name": "facturation",
  "version": "1.0.0",
  "description": "Application de facturation conforme 2027 pour Entrepreneur Individuel",
  "main": "dist-electron/index.js",
  "author": "Toutiscope",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Toutiscope/Facturation"
  },
  "scripts": {
    "dev": "vite",
    "build:renderer": "vite build",
    "build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rd /s /q dist dist-electron out"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "blob-stream": "^0.1.3",
    "date-fns": "^3.2.0",
    "electron-log": "^5.0.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "npm": "^11.9.0",
    "pdfkit": "^0.15.0",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "sass": "^1.70.0",
    "vite": "^5.0.12",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.facturation.qbmaker.app",
    "productName": "Facturation",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "directories": {
      "output": "out",
      "buildResources": "build"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist-electron/index.js"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}
